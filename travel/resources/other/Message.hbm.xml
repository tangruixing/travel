<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.travel.model">
    <class name="Message" table="message">

        <id name="id" column="ID" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
		
		
		
		<property 
			name="userId" 
			column="userId" 
			update="true"
            insert="true"
            type="java.lang.Integer"
			not-null="false" 
			unique="false" 
			length="10"/>
		
		<property 
			name="adminId" 
			column="adminId" 
			update="true"
            insert="true"
            type="java.lang.Integer"
			not-null="false" 
			unique="false" 
			length="10"/>
		
		<property 
			name="content" 
			column="content" 
			update="true"
            insert="true"
            type="java.lang.String"
			not-null="true" 
			unique="false" 
			length="65535"/>
		
		<property 
			name="stats" 
			column="stats" 
			update="true"
            insert="true"
            type="java.lang.Integer"
			not-null="true" 
			unique="false" 
			length="10"/>
		
		<property 
			name="createDate" 
			column="createDate" 
			update="true"
            insert="true"
            type="java.util.Date"
			not-null="true" 
			unique="false" 
			length="0"/>
		
		<!-- One-To-Many attributes -->

		<!-- Many-To-One attributes -->
		
		<many-to-one
			name="user"
            not-null="false"
	        update="false"
	        insert="false"
			cascade="none"
		>	
       		<column name="adminId"/>
		</many-to-one> 

    </class>
</hibernate-mapping>

